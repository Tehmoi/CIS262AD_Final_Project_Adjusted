@page
@model CIS262AD_Final_Project.Pages.Exam.IndexModel
@{
}
<table cellpadding="5">
    <tr>
        <th>
            Exam Id
        </th>
        <th>
            Student Id
        </th>
        <th>
            Score
        </th>
        <th>
            View Student
        </th>
        <th>
            Edit
        </th>
        <th>
            Delete
        </th>
    </tr>
    @foreach (School.Dal.Exam exam in Model.Exams)
    {
        <tr>
            <td>
                @exam.ExamId
            </td>
            <td>
                @exam.StudentId
            </td>
            <td>
                @exam.Score
            </td>
            <td>
                <a asp-page="/Student/Edit" asp-route-id="@exam.StudentId">View Student</a>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@exam.ExamId">Edit</a>
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@exam.ExamId">Delete</a>
            </td>
        </tr>
    }
</table>
<div>
    <a asp-page="./Edit">Add a New Exam</a>
</div>