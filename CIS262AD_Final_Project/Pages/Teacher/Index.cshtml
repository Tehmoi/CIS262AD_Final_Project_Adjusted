@page
@model CIS262AD_Final_Project.Pages.Teacher.IndexModel
@{
}
<table cellpadding="5">
    <tr>
        <th>
            Teacher Id
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Edit
        </th>
        <th>
            Delete
        </th>
    </tr>
    @foreach (School.Dal.Teacher teacher in Model.Teachers)
    {
        <tr>
            <td>
                @teacher.TeacherId
            </td>
            <td>
                @teacher.FirstName
            </td>
            <td>
                @teacher.LastName
            </td>
            <td>
                <a asp-page="/Exams" asp-route-id="@teacher.TeacherId">View Exams</a>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@teacher.TeacherId">Edit</a>
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@teacher.TeacherId">Delete</a>
            </td>
        </tr>
    }
</table>
<div>
    <a asp-page="./Edit">Add a New Teacher</a>
</div>