@page
@model CIS262AD_Final_Project.Pages.Teacher.EditModel
@{
}
<body style="background-color:antiquewhite">

</body>
<h1>Teacher</h1>
<p>Give First name,Last name, and Business name</p>

@if (Model.ErrorDetec)
{
    <strong>Error Detected! Please fill all boxes, including Business Type!</strong>
}
@if (Model.IsSuccessUpdate)
{
    <p>
        You Updated: <!--Model.BusinessName owned by--> @Model.FirstName @Model.LastName
    </p>
}

@if (Model.IsSuccess)
{
    <p>
        You Created: <!--Model.BusinessName owned by--> @Model.FirstName @Model.LastName
    </p>
}
else
{
    <p>Teacher ID: @Model.TeacherId</p>
    <form method="post">
        <div asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="TeacherId"></label><br />
            <input asp-for="TeacherId" class="form-control">
            <br />
        </div>
        <div class="form-group">
            <label asp-for="FirstName"></label><br />
            <input asp-for="FirstName" class="form-control">
            <br />
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label><br />
            <input asp-for="LastName" class="form-control">
            <br />
        </div>
        <button>Submit</button>
    </form>
}